# Chatbot URL to automate
CHATBOT_URL=https://gemini.google.com/app

# LLM Configuration (LangChain)
OPENAI_API_KEY="YOUR_OPENAI_API_KEY"
# OR ANTHROPIC_API_KEY=your_anthropic_key

# Selector Strategy (Optimized for Gemini)
CHAT_INPUT_SELECTOR=div[contenteditable="true"][role="textbox"]
CHAT_SEND_BUTTON_SELECTOR=button[aria-label*="Send message"]
# Elements to detect when AI is streaming versus finished
CHAT_STOP_BUTTON_SELECTOR=button[aria-label="Stop response"]

# Orchestration Limits
MAX_TURNS=20
MAX_MESSAGE_LENGTH=1000
DELAY_MIN_MS=5000
DELAY_MAX_MS=2000

# JSON Logs path
LOG_FILE_PATH=logs/conversation.json
